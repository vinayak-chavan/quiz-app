<html>

<head>
  <link rel="stylesheet" href="/css/blogcss.css" />
  <%- include('../views/partials/links'); %>

</head>

<body>

  <!-- header part -->

  <nav class="navbar navbar-expand-lg bg-primary navbar-light">
    <div class="container mt-1">
      <h2 class="text-white">QUIZZY</h2>
      <button class="navbar-toggler btn btn-secondary" type="button" data-toggle="collapse" data-target="#collapsenavbar">
        <span class="navbar-toggler-icon "></span>
      </button>
  
      <div class="collapse navbar-collapse text-center" id="collapsenavbar">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item px-2">
            <a href="/home" class="nav-link text-white"> HOME </a>
          </li>
          <li class="nav-item px-2">
            <a href="/all" class="nav-link text-white"> ALL QUIZZES </a>
          </li>
          <li class="nav-item px-2">
            <a href="/addquiz" class="nav-link text-white"> ADD QUIZ </a>
          </li>
          <li class="nav-item px-2">
            <a href="/hosted" class="nav-link text-white"> MY HOSTED </a>
          </li>
          <li class="nav-item px-2">
            <a href="/profile" class="nav-link text-white"> PROFILE </a>
          </li>
          <li class="nav-item px-2">
            <a href="/logout" class="nav-link text-white"> LOGOUT </a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

<div class="container mt-5 mb-4">
<div class="mt-5">
  
  <% if(result < 8) { %>
    <div class="d-flex justify-content-center mt-5 mb-3">
      <h1> Sorry!! You have failed the quiz</h1>
    </div>
    <div class="d-flex justify-content-center mb-4">
      <h3>You scored <%= result %> out of 15</h3>
    </div>
    <% } else { %>
      <div class="d-flex justify-content-center mt-5 mb-3">
        <h1> Congratulations!! </h1>
      </div>
      <div class="d-flex justify-content-center mt-3">
        <h2>You have passed the quiz</h2>
      </div>
      <div class="d-flex justify-content-center mt-4 mb-3">
        <h4>You scored <%= result %> out of 15</h4>
      </div>
      <% } %>
    </div>
  </div>
  </div>

<% if((quiz.title=='Technical' || quiz.title=='Medical' || quiz.title=='Sports') && quiz.level==1 && result> 7) { %>
  <div class="container">
    <div class="d-flex justify-content-center mb-5 mt-5">
      <button class="btn btn-success mt-2 mr-4"><a href="/level/<%= quiz.title %>" class="text-light"> NEXT LEVEL
        </a></button>
      <button class="btn btn-danger mt-2 ml-2"><a href="/home" class="text-light"> BACK </a></button>
    </div>
  </div>
  <% } else { %>
    <div class="container">
      <div class="d-flex justify-content-center mb-5 mt-5">
        <button class="btn btn-danger mt-2 ml-2"><a href="/home" class="text-light"> BACK </a></button>
      </div>
    </div>
    <% } %>

    <div class="d-flex justify-content-center">
    
      <form class="col-md-6" id="profile">
        <div class="form-group">
          <div class="col px-md-2">
            <input type="hidden" name="_id" value="<%= quiz._id %>">
          </div>
          <% quiz.question.forEach(que=> { %>
            <div class="container mt-4">
              <b>Q. </b>
              <%= que.text %>
            </div>
            <div class="container mt-2">
              <b>Ans. </b>
              <%= que.answer %>
            </div>
          <% }) %>
        </div>
</body>

</html>
